<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_52sdp"
        android:background="#E5E5E5">

        <ImageView
            android:id="@+id/rw2_image"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/rw2_item_score"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rw2_item_productname2"
            app:srcCompat="@drawable/ic_group_43" />

        <TextView
            android:id="@+id/rw2_item_productname2"
            android:layout_width="96dp"
            android:layout_height="19dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="productname"
            android:lineHeight="24dp"
            android:textColor="@color/dark"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/rw2_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rw2_item_score"
            android:layout_width="51dp"
            android:layout_height="20dp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:drawableLeft="@drawable/ic_bx_bxs_star"
            android:drawablePadding="6dp"
            android:hint="score"
            android:lineHeight="18dp"
            android:textColor="@color/dark"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/rw2_item_productname2" />

        <TextView
            android:id="@+id/rw2_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:hint="name"
            android:lineHeight="18dp"
            android:textColor="@color/light"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/rw2_item_score"
            app:layout_constraintStart_toEndOf="@+id/rw2_item_score"
            app:layout_constraintTop_toTopOf="@+id/rw2_item_score"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/rw2_item_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:drawableLeft="@drawable/ic_wi_time_2"
            android:drawablePadding="6dp"
            android:hint="min"
            android:lineHeight="18dp"
            android:textColor="@color/light"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/rw2_item_name"
            app:layout_constraintEnd_toEndOf="@+id/rw2_item_dicount"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/rw2_item_name"
            app:layout_constraintTop_toTopOf="@+id/rw2_item_name"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/rw2_item_dicount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="16dp"
            android:hint="discount"
            android:textColor="@color/purple_1"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/rw2_item_productname2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toEndOf="@+id/rw2_item_productname2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>