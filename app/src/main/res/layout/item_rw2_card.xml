<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="321dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/rw2_image"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginStart="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/rw2_item_score"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rw2_item_productname2"
            app:srcCompat="@drawable/ic_group_43" />

        <TextView
            android:id="@+id/rw2_item_productname2"
            android:layout_width="96dp"
            android:layout_height="19dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:hint="productname"
            app:layout_constraintStart_toEndOf="@+id/rw2_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rw2_item_score"
            android:layout_width="48dp"
            android:layout_height="19dp"
            android:layout_marginBottom="4dp"
            android:hint="score"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/rw2_item_productname2" />

        <TextView
            android:id="@+id/rw2_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:hint="name"
            app:layout_constraintBottom_toBottomOf="@+id/rw2_item_score"
            app:layout_constraintStart_toEndOf="@+id/rw2_item_score"
            app:layout_constraintTop_toTopOf="@+id/rw2_item_score"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/rw2_item_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:hint="min"
            app:layout_constraintBottom_toBottomOf="@+id/rw2_item_name"
            app:layout_constraintEnd_toEndOf="@+id/rw2_item_dicount"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/rw2_item_name"
            app:layout_constraintTop_toTopOf="@+id/rw2_item_name"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/rw2_item_dicount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="16dp"
            android:hint="discount"
            app:layout_constraintBottom_toBottomOf="@+id/rw2_item_productname2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/rw2_item_productname2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>